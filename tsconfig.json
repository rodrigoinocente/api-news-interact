{
  "compilerOptions": {
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strictPropertyInitialization": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "module": "commonjs",
    "outDir": "./built",
    "allowJs": true,
    "target": "es2015",
    "lib": ["es2015", "dom"],
    "moduleResolution": "Node"
  },
  "include": [
    "src/**/*","server.ts", "app.ts"
    ], 
}
